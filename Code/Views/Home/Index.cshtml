@{
    ViewData["Title"] = "Home Page";
    var username = ViewBag.Username; // Get the username passed from the controller
}

@section Styles {
    <link rel="stylesheet" href="~/css/NStyles.css" asp-append-version="true" />
}

<div class="container">
    @Html.Partial("_Sidebar")
    <main class="main-content">
        @Html.Partial("_Header")
        @Html.Partial("_Filters")
        <div>
            <div class="notes-grid">
                @for (int i = 0; i < 12; i++) // Render 12 note cards
                {
                    @Html.Partial("_NoteCard")
                }
            </div>
        </div>
    </main>
</div>
